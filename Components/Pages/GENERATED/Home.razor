@page "/"
@using Microsoft.EntityFrameworkCore
@using FinalProject.Models
@using FinalProject.Data

<PageTitle>Home</PageTitle>

<!-- Link to Google Fonts for a different font -->
<link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">

<!-- Welcome Header Section -->
<div class="welcome-container text-center mt-5">
    <h1 style="font-family: 'Roboto', sans-serif; font-weight: 700;">Welcome to Doggy Domain</h1>
    <p style="font-family: 'Roboto', sans-serif; font-size: 1.1rem; color: #555;">Where your new best friend is waiting for you!</p>
    <a href="/viewdogs" class="btn btn-primary mt-3" style="font-family: 'Roboto', sans-serif;">Adopt a Dog</a>
</div>
<br />

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Scrolling Image</title>
</head>

<div class="scrolling-container">
    <div class="scrolling-images">
        <img src="/images/DogWithFamily.jpg" alt="Scrolling Image" class="scrolling-image">
        <div class="scrolltext1">
            Max, a scrappy mixed breed, found his forever home with the Johnsons, bonding immediately with their daughter Lily and bringing joy to their family.
        </div>

        <img src="/images/DogWithFamily2.jpg" alt="Scrolling Image" class="scrolling-image">
        <div class="scrolltext2">
            Bella, once fearful and neglected, blossomed under the care of the Millers, who gave her a second chance, especially bonding with their son Ben.
        </div>

        <img src="/images/DogWithFamily3.jpg" alt="Scrolling Image" class="scrolling-image">
        <div class="scrolltext3">
            Rex, a golden retriever abandoned on the streets, became the loyal protector of the Smiths, playing with the kids and watching over their home.
        </div>

        <img src="/images/DogWithFamily4.jpg" alt="Scrolling Image" class="scrolling-image">
        <div class="scrolltext4">
            Daisy, a senior rescue dog, was welcomed by the Williams family, who gave her the love and peace she deserved in her later years.
        </div>

        <img src="/images/DogWithFamily5.jpg" alt="Scrolling Image" class="scrolling-image">
        <div class="scrolltext5">
            Charlie, a high-energy terrier mix, found his best friend in Emma, bringing excitement and adventure to the Brown family.
        </div>

        <img src="/images/DogWithFamily.jpg" alt="Scrolling Image" class="scrolling-image">

        <img src="/images/DogWithFamily2.jpg" alt="Scrolling Image" class="scrolling-image">

        <img src="/images/DogWithFamily3.jpg" alt="Scrolling Image" class="scrolling-image">

        <img src="/images/DogWithFamily4.jpg" alt="Scrolling Image" class="scrolling-image">

        <img src="/images/DogWithFamily5.jpg" alt="Scrolling Image" class="scrolling-image">
    </div>
</div>



<!-- Main Content Section -->
<div class="container mt-4">
    <div class="row">
        <!-- Policy Card -->
        <div class="col-md-6">
            <div class="card" style="font-family: 'Roboto', sans-serif; height: 100%; transform: translateY(-200px); padding: 30px;">
                <div class="card-body">
                    <h3 style="font-size: 2rem;">Our Adoption Policy</h3>
                    <p style="font-size: 1.2rem;">We have a dedicated adoption policy to ensure each dog finds a loving forever home. The full policy is available for you to review.</p>
                    <a href="/policy" class="btn btn-primary" style="font-size: 1.1rem;">View Adoption Policy</a>
                </div>
            </div>
        </div>

        <!-- New Card to the Right -->
        <div class="col-md-6">
            <div class="card" style="font-family: 'Roboto', sans-serif; height: 100%; transform: translateY(-200px); padding: 30px;">
                <div class="card-body">
                    <h3 style="font-size: 2rem;">Know a Dog That Needs a New Home?</h3>
                    <p style="font-size: 1.2rem;">If you know a dog in need of a forever home, Doggy Domain is the perfect place to help them find their new family. We provide a safe, loving environment for every dog and a smooth adoption process for families.</p>
                    <a href="/dog" class="btn btn-primary" style="font-size: 1.1rem;">View Listing Page</a>
                </div>
            </div>
        </div>
    </div>
</div>



